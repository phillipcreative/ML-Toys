{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }}-padding {
    --image_opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }

  .section-{{ section.id }}-padding .section-title-wrapper {
    display: flex;
    align-items: center;
    gap: 2rem;
    justify-content: {{ section.settings.heading_alignment }};
    position: relative;
  }

  .section-{{ section.id }}-padding .section-title {
    margin: 0;
    flex-shrink: 0;
  }

  .section-{{ section.id }}-padding .section-title__icon {
    display: inline-flex;
    align-items: center;
    flex-shrink: 0;
  }

  .section-{{ section.id }}-padding .section-title__icon--left {
    order: -1;
  }

  .section-{{ section.id }}-padding .section-title__icon--right {
    order: 1;
  }

  .section-{{ section.id }}-padding .section-title__icon-image {
    width: auto;
    height: 3rem;
    max-width: 60px;
    object-fit: contain;
  }

  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding .section-title-wrapper {
      gap: 1rem;
    }
  }

{%- endstyle -%}

{%- liquid
  assign columns = section.settings.columns_desktop
  if columns > 3
    assign columns = 3
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient ml-collection-list-grid">
  {% if section.settings.show_background_tread %}
    <div class="collection-tabs-bg-tread">
      {% render 'tire-tread-bg' %}
    </div>
  {% endif %}
  <div class="collection-list-wrapper collection-tabs page-width isolate{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding" data-section-id="{{ section.id }}">

    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="section-heading align-{{ section.settings.heading_alignment }}">
        {%- if section.settings.title != blank -%}
          <div class="section-title-wrapper">
            {%- if section.settings.icon_one != blank -%}
              <span class="section-title__icon section-title__icon--left">
                <img src="{{ section.settings.icon_one | image_url: width: 60 }}" alt="" class="section-title__icon-image" loading="lazy" width="60" height="60">
              </span>
            {%- endif -%}
            <h2 id="SectionHeading-{{ section.id }}" class="section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
              {{ section.settings.title }}
            </h2>
            {%- if section.settings.icon_two != blank -%}
              <span class="section-title__icon section-title__icon--right">
                <img src="{{ section.settings.icon_two | image_url: width: 60 }}" alt="" class="section-title__icon-image" loading="lazy" width="60" height="60">
              </span>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="section-description rte-{{ section.settings.text_size_block }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description -}}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}


    <ul class="collection-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down" role="list">
      {%- for block in section.blocks -%}
        <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
          <div class="custom-card-wrapper">
            {%- if block.settings.link_url != blank -%}
              <a href="{{ block.settings.link_url }}" class="custom-card-link">
            {%- endif -%}

            <div class="custom-card">
              {%- if block.settings.image != blank -%}
                <div class="custom-card__image-container">
                  {{
                    block.settings.image
                    | image_url: width: 500
                    | image_tag:
                      loading: 'lazy',
                      class: 'custom-card__image',
                      widths: '246, 493, 600, 713, 823, 990, 1100, 1206, 1346, 1426, 1646, 1946'
                  }}
                </div>
              {%- endif -%}

              <div class="custom-card__content">
                {%- if block.settings.link_title != blank -%}
                  <h3 class="custom-card__title">
                    {{ block.settings.link_title | escape }}
                    {%- if block.settings.link_url != blank -%}
                      <span class="custom-card__arrow">{% render 'arrow-right' %}</span>
                    {%- endif -%}
                  </h3>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
                  <p class="custom-card__description">
                    {{ block.settings.description | escape }}
                  </p>
                {%- endif -%}
              </div>
            </div>

            {%- if block.settings.link_url != blank -%}
              </a>
            {%- endif -%}
          </div>
        </li>
      {%- endfor -%}
    </ul>

    {% if section.settings.button_label != blank and section.settings.button_url != blank %}
      <a href="{{ section.settings.button_url }}" class="ml-button-primary">
        {{ section.settings.button_label }} {% render 'arrow-right' %}
      </a>
    {% endif %}
  </div>
</div>

{% if section.settings.bg_image != blank %}
  <style>
    .ml-collection-list-grid {
      background-image: url('{{ section.settings.bg_image | image_url: width: 1920 }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }
  </style>
{% endif %}


