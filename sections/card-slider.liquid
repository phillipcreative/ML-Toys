{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .section-{{ section.id }}-padding {
    --slide-content-width: {{ section.settings.slide_content_width }}rem;
  }
  
  {% for block in section.blocks %}
    #Slide-{{ section.id }}-{{ forloop.index }}{
      --image_opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }};
    }
  {% endfor %}

  
{%- endstyle -%}

<card-slider 
  class="card-slider_box 
  color-{{ section.settings.color_scheme }}
  section-{{ section.id }}-padding 
  gradient 
  "
  data-loop="{{ section.settings.loop }}"
  data-autoplay="{{ section.settings.auto_play }}"
>
  {%- if section.settings.title != blank or section.settings.description != blank -%}
    <div class="section-heading align-{{ section.settings.heading_alignment }} page-width">

      {%- if section.settings.title != blank -%}
        <h2 class="section-title section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.title }}
        </h2>
      {%- endif -%}

      {%- if section.settings.description != blank -%}
        <div class="section-description rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
          {{ section.settings.description }}
        </div>
      {%- endif -%}

    </div>
  {%- endif -%}
  <div class="card-slider__wrapper {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" data-slides-count="{{ section.blocks.size }}">
    <div class="{% if section.blocks.size > 1 %}card-slider__inner{% endif %} page-width">
      <div class="swiper">
        <div class="swiper-wrapper">
          {% for block in section.blocks %}
            <div id="Slide-{{ section.id }}-{{ forloop.index }}" class="swiper-slide color-{{ block.settings.color_scheme }}">
              <div class="card-slider__item">
                <div class="card-slider__item-image">
                  {%- if block.settings.image -%}
                    {%- liquid
                      assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
                      assign class = ''
                      if block.settings.image_mb != blank
                        assign class = 'small-hide'
                      endif

                      if section.settings.image_behavior == 'ambient'
                        assign sizes = '120vw'
                        assign widths = '450, 660, 900, 1320, 1800, 2136, 2400, 3600, 7680'
                      else
                        assign sizes = '100vw'
                        assign widths = '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
                      endif
                      assign fetch_priority = 'high'
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: 3840
                      | image_tag:
                        height: height,
                        sizes: sizes,
                        widths: widths,
                        fetchpriority: fetch_priority,
                        alt: block.settings.image.alt,
                        class: class
                    }}
                  {%- else -%}
                    {%- assign placeholder_slide = forloop.index | modulo: 2 -%}
                    {%- if placeholder_slide == 1 -%}
                      {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- else -%}
                      {{ 'hero-apparel-1' | placeholder_svg_tag: 'placeholder-svg' }}
                    {%- endif -%}
                  {%- endif -%}
                </div>
                <div class="card-slider__item-info">
                  {%- if block.settings.title != blank -%}
                    <h3 class="card-slider__item__title inline-richtext {{ block.settings.heading_size_block }}">
                      {{- block.settings.title -}}
                    </h3>
                  {%- endif -%}

                  {%- if block.settings.text != blank -%}
                    <div class="card-slider__item__description rte rte-{{ block.settings.text_size_block }}">
                      {{- block.settings.text -}}
                    </div>
                  {%- endif -%}

                  {% comment %} Button {% endcomment %}
                  {%- liquid
                    assign button_style = 'button button--secondary'

                    if block.settings.button_style == 'link'
                      assign button_style = 'link underlined-link'
                    elsif block.settings.button_style == 'solid'
                      assign button_style = 'button'
                    elsif block.settings.button_style == 'link_icon'
                      assign button_style = 'link animate-arrow'
                    elsif block.settings.button_style == 'link_hover'
                      assign button_style = 'link link-hover'
                    endif
                  -%}

                  {%- if block.settings.link_label != blank -%}
                    <a
                      {% if block.settings.link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.link }}"
                      {% endif %}
                      class="{{ button_style }}"
                    >
                      {%- if block.settings.button_style != 'link_icon' -%}
                        <span>{{- block.settings.link_label | escape -}}</span>
                      {%- else -%}
                        <span>{{- block.settings.link_label | escape -}}</span>
                        <span class="icon-wrap">
                          {%- render 'icon-caret' -%}
                        </span>
                      {%- endif -%}
                    </a>
                  {%- endif -%}
                </div>
              </div>
            </div>
          {% endfor %}
        </div>

        <div class="card-slider__slider-btns swiper-slider-buttons no-js-hidden">
          <button type="button" class="card-slider__slider-btn slider-button slider-button--prev swiper-button-prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">
            {% render 'icon-arrow-short' %}
          </button>

          <button type="button" class="card-slider__slider-btn slider-button slider-button--next swiper-button-next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">
            {% render 'icon-arrow-short' %}
          </button>
        </div>
      </div>
    </div>
  </div>
</card-slider>

<script src="{{ 'card-slider.js' | asset_url }}" defer="defer"></script>
