{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
	#shopify-section-{{ section.id }} {
		--padding-top: {{ section.settings.padding_top }}px;
		--padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

{% assign subcollections = section.blocks | where: "type", "subcollections" | first %}

{% assign promo_block = section.blocks | where: "type", "promo" | first %}
{% assign promo_blocks = section.blocks | where: "type", "promo" %}
{% if promo_blocks.size > 1 %}
  {% assign promo_block2 = promo_blocks[1] %}
{% endif %}


<div class="section-responsive-padding gradient color-{{ section.settings.color_scheme }}">

  {% if subcollections != blank %}
    {%- for block in section.blocks -%}
      {%- case block.type -%}
        {%- when 'subcollections' -%}
					{%- if block.settings.overlay != blank -%}
						{%- style -%}
							#shopify-section-{{ section.id }} {
								--subcollections-overlay: {{ block.settings.overlay }};
							}
						{%- endstyle -%}
					{%- endif -%}
          {% if collection.handle == 'all' %}
            <div class="collection-subcollections page-width" {{ block.shopify_attributes }}>
              <ul class="subcollections-list grid grid--{{ block.settings.collections_desktop }}-col-desktop grid--3-col-tablet-down" role="list" {{ block.shopify_attributes }}>

                {%- for link in block.settings.menu.links -%}
                  {%- liquid
                    assign link_handle = link.object.handle
                    if link.object.image != blank
                      assign menu_image = link.object.image
                    else
                      assign menu_image = link.object.featured_image
                    endif
                  %}
                  
                    <li class="grid__item color-{{ block.settings.color_scheme }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
      
                      <a href="{{ link.url }}" class="subcollection{% if menu_image != blank %} subcollection-image image-{{ block.settings.image_ratio }}{% endif %}{% if link.current %} current-collection{% endif %}" style="--image_opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }}">
      
                        {% if menu_image != blank %}
                          <img srcset="{{ menu_image | image_url: width: 350 }}" src="{{ menu_image | image_url: width: 350 }}"
                            loading="lazy" width="{{ menu_image.width }}" height="{{ menu_image.height }}" alt="{{ link.title | escape }} image">
                        {% endif %}
      
                        <span class="{{ block.settings.heading_size }}">
                          {{- link.title | escape -}}
                          {% if block.settings.show_product_count %}
                            <sup>
                              {{- link.object.products_count -}}
                            </sup>
                          {% endif %}
                        </span>
                      </a>
      
                    </li>

                {%- endfor -%}
              </ul>
            </div>
          {% else %}
            {%- for link in block.settings.menu.links -%}
              {%- liquid
                assign link_handle = link.object.handle
                if link.object.image != blank
                  assign menu_image = link.object.image
                else
                  assign menu_image = link.object.featured_image
                endif
              %}
              
              {% if link_handle == collection.handle and link.links != blank%}
                <div class="collection-subcollections subcollections-level2 page-width" {{ block.shopify_attributes }}>
                  <ul class="subcollections-list grid grid--{{ block.settings.collections_desktop }}-col-desktop grid--3-col-tablet-down" role="list" {{ block.shopify_attributes }}>

                    <li class="grid__item color-{{ block.settings.color_scheme }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                      <a href="{{ link.url }}" class="subcollection{% if menu_image != blank %} subcollection-image image-{{ block.settings.image_ratio }}{% endif %}{% if link.current %} current-collection{% endif %}" style="--image_opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }}">
                        
                        {% if menu_image != blank %}
                          <img srcset="{{ menu_image | image_url: width: 350 }}" src="{{ menu_image | image_url: width: 350 }}"
                            loading="lazy" width="{{ menu_image.width }}" height="{{ menu_image.height }}" alt="{{ link.title | escape }} image">
                        {% endif %}

                        <span class="{{ block.settings.heading_size }}">
                          All {{ link.title | escape -}}
                          {% if block.settings.show_product_count %}
                            <sup>
                              {{- link.object.products_count -}}
                            </sup>
                          {% endif %}
                        </span>
                      </a>
                    </li>

                    {%- for childlink in link.links -%}

                      {%- liquid
                        if childlink.object.image != blank
                          assign menu_image = childlink.object.image
                        else
                          assign menu_image = childlink.object.featured_image
                        endif
                      %}

                      <li class="grid__item color-{{ block.settings.color_scheme }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                        <a href="{{ childlink.url }}" class="subcollection{% if menu_image != blank %} subcollection-image image-{{ block.settings.image_ratio }}{% endif %}{% if childlink.current %} current-collection{% endif %}" style="--image_opacity: {{ block.settings.image_overlay_opacity | divided_by: 100.0 }}">

                          {% if menu_image != blank %}
                            <img srcset="{{ menu_image | image_url: width: 350 }}" src="{{ menu_image | image_url: width: 350 }}"
                              loading="lazy" width="{{ menu_image.width }}" height="{{ menu_image.height }}" alt="{{ childlink.title | escape }} image">
                          {% endif %}

                          <span class="{{ block.settings.heading_size }}">
                            {{- childlink.title | escape -}}
                            {% if block.settings.show_product_count %}
                              <sup>
                                {{- childlink.object.products_count -}}
                              </sup>
                            {% endif %}
                          </span>
                        </a>
                      </li>

                    {%- endfor -%}
                  </ul>
                </div>
              {% endif %}
            {%- endfor -%}
          {% endif %}

      {%- endcase -%}
    {%- endfor -%}
  {% endif %}

  {%- paginate collection.products by section.settings.products_per_page -%}
    {% comment %} Sort is the first tabbable element when filter type is vertical {% endcomment %}

    <div class="{% if section.settings.filter_type == 'vertical' %} facets-vertical page-width{% elsif section.settings.filter_type == 'horizontal' -%} facets-horizontal{% else %}facets-drawer{% endif %}">

      {{ 'component-facets.css' | asset_url | stylesheet_tag }}
      <script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

      {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}

        <aside aria-labelledby="verticalTitle" class="facets-wrapper{% unless section.settings.enable_filtering %} facets-wrapper--no-filters{% endunless %}{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}{% if collection.products.size == 0 %} filter--collection-empty{% endif %}" id="main-collection-filters" data-id="{{ section.id }}">

          {% render 'facets',
            results: collection,
            enable_filtering: section.settings.enable_filtering,
            enable_sorting: section.settings.enable_sorting,
            filter_type: section.settings.filter_type,
            show_products_count: true,
            paginate: paginate
          %}

        </aside>
      {%- endif -%} 

      <div class="product-grid-container{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
        id="ProductGridContainer" {% if settings.animations_reveal_on_scroll %} data-cascade {% endif %}>

        {%- if section.settings.filter_type == 'vertical' and section.settings.enable_sorting or section.settings.show_navigation -%}
          <facet-filters-form class="facets facets-vertical-sort small-hide no-js-hidden">
            <form class="facets-vertical-form" id="FacetSortForm">

              {% if section.settings.show_navigation %}
                <div class="navigation-layout medium-hide">
									{%- if section.settings.navigation_label -%}
										<span class="navigation-layout__label {{ section.settings.label_font_weight }} {{ section.settings.label_font_style }} {{ section.settings.label_font_size }} inline-richtext">
											{{ section.settings.navigation_label }}
										</span>
									{%- endif -%}

                  <span class="thumbnail-view active">
                    <svg class="icon icoun-thumbnail" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect x="7.34863" width="5" height="5" fill="currentColor"/>
                      <rect x="15" width="5" height="5" fill="currentColor"/>
                      <rect y="7.5" width="5" height="5" fill="currentColor"/>
                      <rect width="5" height="5" fill="currentColor"/>
                      <rect x="7.34863" y="7.5" width="5" height="5" fill="currentColor"/>
                      <rect x="15" y="7.5" width="5" height="5" fill="currentColor"/>
                      <rect x="15" y="15" width="5" height="5" fill="currentColor"/>
                      <rect x="7.34863" y="15" width="5" height="5" fill="currentColor"/>
                      <rect x="0.0756836" y="15" width="5" height="5" fill="currentColor"/>
                    </svg>
                  </span>
                  <span class="list-view">
                    <svg class="icon icoun-list" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect x="7" width="13" height="5" fill="currentColor"/>
                      <rect y="7.5" width="5" height="5" fill="currentColor"/>
                      <rect width="5" height="5" fill="currentColor"/>
                      <path d="M7.34863 7.5L20 7.5V12.5H7.34863V7.5Z" fill="currentColor"/>
                      <path d="M7.34863 15H20V20H7.34863V15Z" fill="currentColor"/>
                      <rect x="0.0756836" y="15" width="5" height="5" fill="currentColor"/>
                    </svg>
                  </span>
                </div>
              {% endif %}
    
              <div class="product-count-vertical" role="status">
                
                <h2 class="product-count__text text-body">
                  <span id="ProductCountDesktop">
                    {%- if collection.results_count -%}
                      {{ 'templates.search.results_with_count' | t: terms: collection.terms, count: collection.results_count }}
                    {%- elsif collection.products_count == collection.all_products_count -%}
                      {{ 'products.facets.product_count_simple' | t: count: collection.products_count }}
                    {%- else -%}
                      {{ 'products.facets.product_count' | t: product_count: collection.products_count, count: collection.all_products_count }}
                    {%- endif -%}
                  </span>
                </h2>
    
                {%- render 'loading-spinner' -%}
    
              </div>
    
              {%- if section.settings.enable_sorting -%}
                <div class="facet-filters sorting caption">
                  <div class="facet-filters__field">
      
                    <h2 class="facet-filters__label {{ section.settings.label_font_weight }} {{ section.settings.label_font_style }} {{ section.settings.label_font_size }} text-body">
                      {% comment %} <label for="SortBy">
                        </label> {% endcomment %}
                        {{ 'products.facets.sort_by_label' | t }}
                    </h2>
      
                    <div class="select">
                      {%- assign sort_by = collection.sort_by | default: collection.default_sort_by -%}
      
                      {% comment %} <select name="sort_by" class="facet-filters__sort select__select caption-large color-{{ section.settings.filter_color_scheme }}" id="SortBy" aria-describedby="a11y-refresh-page-message" >
      
                        {%- for option in collection.sort_options -%}
                          <option value="{{ option.value | escape }}" {% if option.value == sort_by %} selected="selected" {% endif %}>
                            {{ option.name | escape }}
                          </option>
                        {%- endfor -%}
      
                      </select>
                      {% render 'icon-caret' %} {% endcomment %}

                      <div class="custom-sort-by" id="SortBy" aria-describedby="a11y-refresh-page-message">
                        <span class="sort-by--header color-{{ section.settings.sorting_color_scheme }}">
                          {%- for option in collection.sort_options -%}
                            {% if option.value == sort_by %}
                              {{- option.name | escape -}}
                            {% endif %}
                          {%- endfor -%}
                          {% render 'icon-caret' %}
                        </span>
                        <ul class="sort-by--list list-unstyled color-{{ section.settings.sorting_inside_color_scheme }}">
                          <li class="sort-by--item-header">
                            {{ 'products.facets.sort_by_label' | t }}
                          </li>
                          {%- for option in collection.sort_options -%}
                            <li class="sort-by--item{% if option.value == sort_by %} selected{% endif %}">
                              <label>
                                <input id="SortBy-{{ option.value | escape }}" class="sr-only" name="sort_by" type="radio" value="{{ option.value | escape }}">
                                {{- option.name | escape -}}
                              </label>
                            </li>
                          {%- endfor -%}
                        </ul>
                      </div>
                    </div>
                  </div>
      
                  <noscript>
                    <button type="submit" class="facets__button-no-js button button--secondary">
                      <span>
                        {{ 'products.facets.sort_button' | t }}
                      </span>
                    </button>
                  </noscript>
                </div>
              {%- endif -%}
            </form>
          </facet-filters-form>
        {%- endif -%}

        {%- if collection.products.size == 0 -%}
          <div class="collection collection--empty page-width" id="product-grid" data-id="{{ section.id }}">
            <div class="loading-overlay gradient"></div>
            <div class="title-wrapper center">
              <h2 class="title title--primary">
                {{ 'sections.collection_template.empty' | t -}}
                <br>
                {{ 'sections.collection_template.use_fewer_filters_html' | t: link: collection.url, class: 'underlined-link link' }}
              </h2>
            </div>
          </div>
        {%- else -%}
          <div class="collection{% if section.settings.filter_type != 'vertical' %} page-width{% endif %}">
            
            <div class="loading-overlay gradient"></div>

            <ul id="product-grid" data-id="{{ section.id }}" class="grid product-grid contains-card--product grid--{{ section.settings.columns_mobile }}-col-tablet-down grid--{{ section.settings.columns_desktop }}-col-desktop">

              {%- for product in collection.products -%}

                {%- assign show_promo = false -%}
                {%- assign current_promo = nil -%}

                {%- if promo_block != blank and forloop.index == promo_block.settings.position -%}
                  {%- assign show_promo = true -%}
                  {%- assign current_promo = promo_block -%}
                {%- endif -%}
                
                {%- if promo_block2 != blank and forloop.index == promo_block2.settings.position -%}
                  {%- assign show_promo = true -%}
                  {%- assign current_promo = promo_block2 -%}
                {%- endif -%}
              
                {%- if show_promo and current_promo != nil -%}
                  {%- for block in section.blocks -%}
                    {%- if block == current_promo and block.type == 'promo' -%}
                      <li class="grid__item {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>
                        <div class="promo-card color-{{ block.settings.color_scheme }}" {% if block.settings.image != blank %}style="--ratio-percent: {{ block.settings.image.aspect_ratio }}; --overlay-opacity: {{  block.settings.image_overlay_opacity | times: 0.01 }};"{% endif %}>
              
                          {% if block.settings.image != blank %}
                            <img srcset="{{ block.settings.image | image_url: width: 950 }}" src="{{ block.settings.image | image_url: width: 950 }}"
                            loading="lazy" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" alt="{{ collection.title | escape }} image">
                          {% endif %}
              
                          <div class="card-information">
                            <span class="promo-title inline-richtext h4">
                              {{ block.settings.title }}
                            </span>

                            <span class="promo-description inline-richtext">
                              {{ block.settings.description }}
                            </span>

                            {%- if block.settings.link_label != blank -%}
															
															{%- liquid
																assign button_style = 'link animate-arrow'
																assign button_icon = true

																if block.settings.button_style == 'link'
																	assign button_style = 'link underlined-link'
																	assign button_icon = false
																elsif block.settings.button_style == 'link_hover'
																	assign button_style = 'link link-hover'
																	assign button_icon = false
																endif
															-%}
                              <a class="card-link full-unstyled-link {{ button_style }}" {% if block.settings.link == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.link }}" {% endif %}>
																{{- block.settings.link_label | escape -}}
																{% if button_icon %}
																	{%- render 'icon-caret' -%}
																{% endif %}
                              </a>
                            {%- endif -%}
                          </div>
                        </div>
                      </li>
                    {%- endif -%}
                  {%- endfor -%}
                {%- endif -%}

                {% assign lazy_load = false %}
                {%- if forloop.index > 2 -%}
                  {%- assign lazy_load = true -%}
                {%- endif -%}

                <li class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %}>

                  {% render 'card-product',
                    card_product: product,
                    media_aspect_ratio: section.settings.image_ratio,
                    show_secondary_image: section.settings.show_secondary_image,
                    show_vendor: section.settings.show_vendor,
                    show_rating: section.settings.show_rating,
                    lazy_load: lazy_load,
                    show_quick_add: section.settings.enable_quick_add,
                    show_compare: settings.enable_compare,
                    section_id: section.id,
                  %}

                </li>

              {%- endfor -%}
            </ul>

            {%- if paginate.pages > 1 -%}
              {% render 'pagination', paginate: paginate, anchor: '' %}
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
    
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 4,
      "max": 36,
      "step": 1,
      "default": 9,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 4,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "info": "t:sections.all.colors.has_cards_info",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__3.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "adapt",
          "label": "t:sections.main-collection-product-grid.settings.image_ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.main-collection-product-grid.settings.image_ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.main-collection-product-grid.settings.image_ratio.options__3.label"
        },
        {
          "value": "landscape",
          "label": "Landscape"
        }
      ],
      "default": "landscape",
      "label": "t:sections.main-collection-product-grid.settings.image_ratio.label"
    },
    {
      "type": "checkbox",
      "id": "show_secondary_image",
      "default": false,
      "label": "t:sections.main-collection-product-grid.settings.show_secondary_image.label"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "default": false,
      "label": "t:sections.main-collection-product-grid.settings.show_vendor.label"
    },
    {
      "type": "checkbox",
      "id": "show_rating",
      "default": false,
      "label": "t:sections.main-collection-product-grid.settings.show_rating.label",
      "info": "t:sections.main-collection-product-grid.settings.show_rating.info"
    },
    {
      "type": "checkbox",
      "id": "enable_quick_add",
      "default": false,
      "label": "t:sections.main-collection-product-grid.settings.enable_quick_buy.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__1.content"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
      "info": "t:sections.main-collection-product-grid.settings.enable_filtering.info"
    },
    {
      "type": "select",
      "id": "filter_type",
      "options": [
        {
          "value": "horizontal",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__1.label"
        },
        {
          "value": "vertical",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__2.label"
        },
        {
          "value": "drawer",
          "label": "t:sections.main-collection-product-grid.settings.filter_type.options__3.label"
        }
      ],
      "default": "horizontal",
      "label": "t:sections.main-collection-product-grid.settings.filter_type.label",
      "info": "t:sections.main-collection-product-grid.settings.filter_type.info"
    },
		{
			"type": "select",
			"id": "swatch_layout",
			"label": "Swatch layout",
			"options": [
				{
				"value": "default",
				"label": "Default"
				},
				{
					"value": "stacked",
					"label": "Stacked"
				}
			],
			"default": "default"
		},
    {
      "type": "color_scheme",
      "id": "filter_color_scheme",
      "label": "Filter color scheme",
      "default": "scheme-1"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.label"
    },
    {
      "type": "color_scheme",
      "id": "sorting_color_scheme",
      "label": "Sorting color scheme",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "sorting_inside_color_scheme",
      "label": "Sorting drawer color scheme",
      "default": "scheme-3"
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "default": true,
      "label": "Show navigation layout"
    },
		{
			"type": "text",
			"id": "navigation_label",
			"label": "Navigation label"
		},
		{
      "type": "header",
      "content": "Typography"
    },
		{
			"type": "paragraph",
			"content": "Label"
		},
		{
			"type": "select",
			"id": "label_font_size",
			"default": "text--medium",
      "label": "Font size",
			"options": [
				{
					"value": "text--extra-small",
					"label": "t:settings_schema.global.settings.font_size.option_2"
				},
				{
					"value": "text--small",
					"label": "t:settings_schema.global.settings.font_size.option_3"
				},
				{
					"value": "text--medium",
					"label": "t:settings_schema.global.settings.font_size.option_4"
				}
			]
		},
		{
			"type": "select",
			"id": "label_font_weight",
			"default": "fw-500",
      "label": "Font weight",
			"options": [
				{
					"value": "fw-400",
					"label": "t:settings_schema.global.settings.font_weight.option_1"
				},
				{
					"value": "fw-500",
					"label": "t:settings_schema.global.settings.font_weight.option_2"
				},
