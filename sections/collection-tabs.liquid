{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_quick_add -%}
  {{ 'quick-add.css' | asset_url | stylesheet_tag }}
  <script src="{{ 'quick-add.js' | asset_url }}" defer="defer"></script>
  <script src="{{ 'product-form.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }
  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  .section-{{ section.id }}-padding {
    --image_opacity: {{ section.settings.image_overlay_opacity | divided_by: 100.0 }};
  }

{%- endstyle -%}

{%- liquid
  assign columns = section.settings.columns_desktop
  if columns > 3
    assign columns = 3
  endif
-%}

<div class="color-{{ section.settings.color_scheme }} gradient" style="position: relative; overflow: hidden;">
  {% if section.settings.show_background_tread %}
    <div class="collection-tabs-bg-tread">
      {% render 'tire-tread-bg' %}
    </div>
  {% endif %}
  <div class="collection-list-wrapper collection-tabs page-width isolate{% if section.settings.title == blank %} no-heading{% endif %} section-{{ section.id }}-padding" data-section-id="{{ section.id }}">

    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="section-heading align-{{ section.settings.heading_alignment }}">
        {%- if section.settings.title != blank -%}
          <h2 id="SectionHeading-{{ section.id }}" class="section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="section-description rte-{{ section.settings.text_size_block }} rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description -}}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    <ul class="collection__navigation">
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'collection_list' -%}
            <li class="navigation-item {% if forloop.index == 1 %} active{% endif %}{% if block.settings.image != blank %} image{% endif %}" tabindex="0" data-tab="tab-{{ forloop.index }}">
              {% if block.settings.image != blank %}
                {{
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    class: 'motion-reduce',
                    widths: '50, 75, 100, 130, 150, 175, 200, 225, 250, 260'
                }}
              {% endif %}

              <h3 class="{{ section.settings.tabs_font_weight }} {{ section.settings.tabs_font_size }} {{ section.settings.tabs_font_family }}-family">
                {{- block.settings.collection_title -}}
              </h3>
            </li>

          {%- when 'collection' -%}
            <li class="navigation-item {% if forloop.index == 1 %} active{% endif %}{% if block.settings.image != blank %} image{% endif %}" tabindex="0" data-tab="tab-{{ forloop.index }}">
              {% if block.settings.image != blank %}
                {{
                  block.settings.image
                  | image_url: width: block.settings.image.width
                  | image_tag:
                    loading: 'lazy',
                    class: 'motion-reduce',
                    widths: '50, 75, 100, 130, 150, 175, 200, 225, 250, 260'
                }}
              {% endif %}

              <h3 class="{{ section.settings.tabs_font_weight }} {{ section.settings.tabs_font_size }} {{ section.settings.tabs_font_family }}-family">
                {% if block.settings.collection_title != blank %}
                  {{- block.settings.collection_title -}}
                {% elsif block.settings.collection.title != blank %}
                  {{- block.settings.collection.title | escape -}}
                {% else %}
                  {{- 'onboarding.collection_title' | t -}}
                {% endif %}
              </h3>
            </li>

        {%- endcase -%}
      {% endfor %}
    </ul>

    <div class="collections_lists">
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'collection_list' -%}
            <ul class="collection-list collection-tabs-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if forloop.index == 1 %} active{% endif %}" role="list" data-tab-id="tab-{{ forloop.index }}">
              {%- for item in block.settings.collection -%}
                <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item {% if section.settings.reverse_card and settings.collection_card_style == 'card' %}item-reverse{% endif %} grid__item{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>

                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}

                  {% render 'card-collection',
                    card_collection: item,
                    media_aspect_ratio: section.settings.image_ratio,
                    columns: columns,
                    placeholder_image: placeholder_image,
                    card_reversed: section.settings.reverse_card,
                    card_heading_size: section.settings.card_heading_size

                  %}
                </li>
              {%- else -%}

                {%- for i in (1..section.settings.columns_desktop) -%}
                  {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
                  {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}

                  <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>

                    {% render 'card-collection',
                      card_collection: item,
                      media_aspect_ratio: section.settings.image_ratio,
                      columns: columns,
                      placeholder_image: placeholder_image,
                      card_reversed: section.settings.reverse_card,
                      card_heading_size: section.settings.card_heading_size
                    %}
                  </li>
                {%- endfor -%}
              {%- endfor -%}
            </ul>

          {%- when 'collection' -%}
            <ul class="collection-list collection-tabs-list contains-card contains-card--collection{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--{{ section.settings.columns_desktop }}-col-desktop grid--{{ section.settings.columns_mobile }}-col-tablet-down{% if forloop.index == 1 %} active{% endif %}" role="list" data-tab-id="tab-{{ forloop.index }}">
              {%- for product in block.settings.collection.products limit: section.settings.products_to_show -%}
                <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                  {% if section.settings.use_custom_product_card %}
                    {% render 'collection-tab-card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.product_image_ratio,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      show_quick_add: section.settings.enable_quick_add,
                      show_compare: settings.enable_compare,
                      section_id: section.id
                    %}
                  {% else %}
                    {% render 'card-product',
                      card_product: product,
                      media_aspect_ratio: section.settings.product_image_ratio,
                      show_secondary_image: section.settings.show_secondary_image,
                      show_vendor: section.settings.show_vendor,
                      show_rating: section.settings.show_rating,
                      show_quick_add: section.settings.enable_quick_add,
                      show_compare: settings.enable_compare,
                      section_id: section.id
                    %}
                </li>
                {% endif %}
              {%- else -%}
                {%- for i in (1..section.settings.columns_desktop) -%}
                  <li class="grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %}>

                    {% liquid
                      assign ridx = forloop.rindex
                      if ridx == 5
                        assign ridx = 1
                      endif
                    %}
                    {%- assign placeholder_image = 'product-apparel-' | append: ridx -%}
                    {% if section.settings.use_custom_product_card %}
                      {% render 'collection-tab-card-product',
                        card_product: product,
                        media_aspect_ratio: section.settings.product_image_ratio,
                        show_secondary_image: section.settings.show_secondary_image,
                        show_vendor: section.settings.show_vendor,
                        show_rating: section.settings.show_rating,
                        show_quick_add: section.settings.enable_quick_add,
                        show_compare: settings.enable_compare,
                        section_id: section.id
                      %}
                    {% else %}
                      {% render 'card-product',
                        show_vendor: section.settings.show_vendor,
                        media_aspect_ratio: section.settings.image_ratio,
                        image_shape: section.settings.image_shape,
                        placeholder_image: placeholder_image
                      %}
                    {% endif %}
                  </li>
                {%- endfor -%}
              {%- endfor -%}

              {%- if block.settings.button_label != blank and block.settings.show_view_all == true -%}
                <li class="collection-list__item-button grid__item{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};"{% endif %}>
                  <a {% if block.settings.collection == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.collection.url }}" {% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}">
                    <span>
                      {{ block.settings.button_label | escape }}
                    </span>
                  </a>
                </li>
              {%- endif -%}
            </ul>

        {%- endcase -%}
      {%- endfor -%}
    </div>

    {% if section.settings.button_label != blank and section.settings.button_url != blank %}
      <a href="{{ section.settings.button_url }}" class="ml-button-primary">
        {{ section.settings.button_label }} {% render 'arrow-right' %}
      </a>
    {% endif %}
  </div>
</div>

<script src="{{ 'collection-tabs.js' | asset_url }}" defer="defer"></script>

<style>

  .section-collection-tabs {
    position: relative;
  }
  .collection-tabs-bg-tread {
    position: absolute;
    top: -42px;
    right: 23px;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
    width: 800px;
  }
</style>


