{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{% assign block1 = section.blocks | where: "type", "collapsible_row" | first %}
{% assign block2 = section.blocks | where: "type", "collapsible_heading" | first %}
{% assign block3 = section.blocks | where: "type", "testimonial" | first %}
{% assign block4 = section.blocks | where: "type", "testimonial_heading" | first %}

<div class="color-{{ section.settings.color_scheme }} gradient">

  <div class="collapsible-content help-feedback isolate content-container content-container--full-width">

    <div class="collapsible-content__wrapper section-{{ section.id }}-padding">

      <div class="page-width">

        {%- if section.settings.heading != blank or section.settings.text != blank -%}
          <div class="section-heading align-{{ section.settings.heading_alignment }}">
            {%- if section.settings.heading != blank -%}
              <h2 id="SectionHeading-{{ section.id }}" class="section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.heading }}
              </h2>
            {%- endif -%}
    
            {%- if section.settings.text != blank -%}
              <div class="section-description rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
                {{ section.settings.text -}}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        <div class="grid grid--1-col grid--3-col-tablet collapsible-content__grid{% if section.settings.desktop_layout == 'review_first' %} collapsible-content__grid--reverse{% endif %} 
          {% if section.settings.color_scheme == section.settings.faq_color_scheme %} transparent-bg {% else %} color-{{ section.settings.faq_color_scheme }} {% endif %}">

          {% if block1 != blank or block2 != blank %}
            <div class="grid__item grid__item--collapsible">
              {%- for block in section.blocks -%}
                {%- case block.type -%}
                
                  {%- when 'collapsible_heading' -%}
                    <div class="collapsible-content--heading{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>
                      <h2 class="inline-richtext">
                        {{ block.settings.collapsible_heading }}
                      </h2>

                      {%- if block.settings.button_label != blank -%}
                        <a {% if block.settings.button_link == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.button_link }}"
                          {% endif %} class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                            <span>
                              {{ block.settings.button_label | escape }}
                            </span>
                        </a>
                      {%- endif -%}
                    </div>

                  {%- when 'collapsible_row' -%}
                    <div class="accordion{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>
                      <details id="Details-{{ block.id }}-{{ section.id }}" {% if block.settings.open_collapsible_row %} open{% endif %}>

                        <summary id="Summary-{{ block.id }}-{{ section.id }}">
                          {% render 'icon-accordion', icon: block.settings.icon %}

                          <h3 class="accordion__title inline-richtext h5">
                            {{ block.settings.heading | default: block.settings.page.title }}
                          </h3>

                          {% render 'icon-caret' %}
                        </summary>

                        <div class="accordion__content rte" id="CollapsibleAccordion-{{ block.id }}-{{ section.id }}" role="region" aria-labelledby="Summary-{{ block.id }}-{{ section.id }}">
                          {{ block.settings.row_content }}
                          {{ block.settings.page.content }}
                        </div>
                      </details>
                    </div>

                {%- endcase -%}
              {%- endfor -%}
            </div>
          {% endif %}

          {% if block3 != blank or block4 != blank %}
            <div class="grid__item grid__item--testimonial color-{{ section.settings.reviews_color_scheme }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">

              {%- for block in section.blocks -%}
                {%- case block.type -%}
                  {%- when 'testimonial_heading' -%}
                    <h2 class="collapsible-content--heading inline-richtext center h3{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}" {{ block.shopify_attributes }}>
                      {{ block.settings.testimonial_heading }}
                    </h2>
                {%- endcase -%}
              {%- endfor -%}

