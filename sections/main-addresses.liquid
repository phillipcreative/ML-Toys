{{ 'customer.css' | asset_url | stylesheet_tag }}

<script src="{{ 'customer.js' | asset_url }}" defer></script>

{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

{%- liquid
		assign button_style = 'button button--secondary'

		if section.settings.button_style == 'link'
			assign button_style = 'link underlined-link'
		elsif section.settings.button_style == 'solid'
			assign button_style = 'button'
		elsif section.settings.button_style == 'link_icon'
			assign button_style = 'link-with-arrow'
		elsif section.settings.button_style == 'link_hover'
			assign button_style = 'link link-hover'
		endif
	-%}	

<div class="color-{{ section.settings.section_color_scheme }}">
  {%- paginate customer.addresses by 5 -%}
    <div class="customer addresses customer-addresses section-{{ section.id }}-padding" data-customer-addresses>
      <div class="customer-account__sidebar">
        <div class="customer-account__sidebar-items">
          <div class="customer-account__sidebar-item {% if request.path == '/account' %}active-order-history{% endif %} color-{{ section.settings.color_scheme }}">
            <a class="h5" href="{{ routes.account_url }}">
              {{ 'customer.orders.order_history' | t }}
              {% render 'icon-caret' %}
            </a>
          </div>
          <div class="customer-account__sidebar-item {% if request.path == '/account/addresses' %}active-addresses{% endif %} color-{{ section.settings.color_scheme }}">
            <a class="h5" href="{{ routes.account_addresses_url }}">
              {{ 'customer.account.view_addresses' | t }}
              {% render 'icon-caret' %}
            </a>
          </div>
        </div>
		<a href="{{ routes.account_logout_url }}" class="customer-account__logout {{ button_style }}">
			{%- if section.settings.button_style != 'link_icon' -%}
				<span> {{ 'customer.log_out' | t }}</span>
				{%- else -%}
				{{ 'customer.log_out' | t }}
				{%- render 'icon-caret' -%}
			{%- endif -%}
		 </a>
      </div>
      <div data-address class="customer-account__orders">
        <div class="customer-account__orders-header">
          <h3 class="customer-account__orders-title">{{ 'customer.addresses.title' | t }}</h3>
          <button type="button" class="buton" aria-expanded="false" aria-controls="AddAddress">
            <span>
              {{ 'customer.addresses.add_new' | t }}
            </span>
          </button>
        </div>
        {% if customer.addresses.size == 0 %}
          <div class="customer-account__orders-empty color-{{ section.settings.color_scheme }}">
            <div class="customer-account__orders-empty__icon">
              {%- render 'icon-address' -%}
            </div>
            <h3>{{ 'customer.orders.none' | t }}</h3>
          </div>
        {% endif %}
        <div class="new-address-form-wrapper color-{{ section.settings.color_scheme }}">
          <div id="AddAddress">
            <h4 id="AddressNewHeading">{{ 'customer.addresses.add_new' | t }}</h4>
            {%- form 'customer_address'
              , customer.new_address
              , aria-labelledBy: 'AddressNewHeading' -%}
              <div class="field">
                <label for="AddressFirstNameNew">{{ 'customer.addresses.first_name' | t }}</label>
                <input
                  type="text"
                  id="AddressFirstNameNew"
                  name="address[first_name]"
                  value="{{ form.first_name }}"
                  autocomplete="given-name"
                  placeholder="{{ 'customer.addresses.placeholder.first_name' | t }}">
              </div>
              <div class="field">
                <label for="AddressLastNameNew">{{ 'customer.addresses.last_name' | t }}</label>
                <input
                  type="text"
                  id="AddressLastNameNew"
                  name="address[last_name]"
                  value="{{ form.last_name }}"
                  autocomplete="family-name"
                  placeholder="{{ 'customer.addresses.placeholder.last_name' | t }}">
              </div>
              <div class="field">
                <label for="AddressAddress1New">{{ 'customer.addresses.address1' | t }}</label>
                <input
                  type="text"
                  id="AddressAddress1New"
                  name="address[address1]"
                  value="{{ form.address1 }}"
                  autocomplete="address-line1"
                  placeholder="{{ 'customer.addresses.placeholder.address1' | t }}">
              </div>
              <div class="field">
                <label for="AddressAddress2New">{{ 'customer.addresses.address2' | t }}</label>
                <input
                  type="text"
                  id="AddressAddress2New"
                  name="address[address2]"
                  value="{{ form.address2 }}"
                  autocomplete="address-line2"
                  placeholder="{{ 'customer.addresses.placeholder.address2' | t }}">
              </div>
              <div class="field">
                <label for="AddressCountryNew">{{ 'customer.addresses.country' | t }}</label>
                <div class="select">
                  <select
                    id="AddressCountryNew"
                    name="address[country]"
                    data-default="{{ form.country }}"
                    autocomplete="country">
                    {{ all_country_option_tags }}
                  </select>
                  {% render 'icon-caret' %}
                </div>
              </div>
              <div class="field">
                <label for="AddressCityNew">{{ 'customer.addresses.city' | t }}</label>
                <input
                  type="text"
                  id="AddressCityNew"
                  name="address[city]"
                  value="{{ form.city }}"
                  autocomplete="address-level2"
                  placeholder="{{ 'customer.addresses.placeholder.city' | t }}">
              </div>
              <div
                class="field"
                id="AddressProvinceContainerNew"
                style="display: none">
                <label for="AddressProvinceNew">{{ 'customer.addresses.province' | t }}</label>
                <div class="select">
                  <select
                    id="AddressProvinceNew"
                    name="address[province]"
                    data-default="{{ form.province }}"
                    autocomplete="address-level1"></select>
                  {% render 'icon-caret' %}
                </div>
              </div>
              <div class="field">
                <label for="AddressZipNew">{{ 'customer.addresses.zip' | t }}</label>
                <input
                  type="text"
                  id="AddressZipNew"
                  name="address[zip]"
                  value="{{ form.zip }}"
                  autocapitalize="characters"
                  autocomplete="postal-code"
                  placeholder="{{ 'customer.addresses.placeholder.zip' | t }}">
              </div>
              <div class="field">
                <label for="AddressPhoneNew">{{ 'customer.addresses.phone' | t }}</label>
                <input
                  type="tel"
                  id="AddressPhoneNew"
                  name="address[phone]"
                  value="{{ form.phone }}"
                  autocomplete="tel"
                  placeholder="{{ 'customer.addresses.placeholder.phone' | t }}">
  
              </div>
              <div class="form-footer">
                <div class="form-footer_default-address">
                  {{ form.set_as_default_checkbox }}
                  <label for="address_default_address_new">{{ 'customer.addresses.set_default' | t }}</label>
                </div>

                <div class="form-footer-buttons">
                  <button class="form-footer-add button">
                    <span>
                      {{ 'customer.addresses.add' | t }}
                    </span>
                  </button>

                  <button class="form-footer-reset button {% if section.settings.button_arrow == false %}without-arrow{% endif %}" type="reset">
                    <span>
                      {{ 'customer.addresses.cancel' | t }}
                    </span>
                    {% render "icon-caret" %}
                  </button>
                </div>
              </div>
            {%- endform -%}
          </div>
        </div>
  
        <ul role="list">
          {%- for address in customer.addresses -%}
            <li data-address class="customer-address-item color-{{ section.settings.color_scheme }}">
              <div class="customer-info__wrapper">
                <div class="customer-info">
                  {%- if address == customer.default_address -%}
                    <h6>{{ 'customer.addresses.default' | t }}</h6>
                  {%- endif -%}
                  <div class="customer-fullname">
                    {{ address.first_name }} {{ address.last_name }}
                  </div>
                  <div class="customer-address">{{ address.street }} {{ address.city }} {{ address.province_code }} {{ address.country }} {{ address.zip }}</div>
                </div>
                <div class="customer-buttons">
                  <button
                    class="customer-address-edit button"
                    type="button"
                    id="EditFormButton_{{ address.id }}"
                    aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
                    aria-controls="EditAddress_{{ address.id }}"
                    aria-expanded="false"
                    data-address-id="{{ address.id }}">
                    <span>
                      {{ 'customer.addresses.edit' | t }}
                    </span>
                  </button>
                  <button
                    class="customer-address-delete button {% if section.settings.button_arrow == false %}without-arrow{% endif %}"
                    type="button"
                    aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
                    data-target="{{ address.url }}"
                    data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}">
                    <span>
                      {{ 'customer.addresses.delete' | t }}
                    </span>
                    {% render 'icon-caret' %}
                  </button>
                </div>
              </div>
              <div class="edit-address-form-wrapper" id="EditAddress_{{ address.id }}">
                <h4>{{ 'customer.addresses.edit_address' | t }}</h4>
                {%- form 'customer_address'
                  , address -%}
                  <div class="field">
                    <label for="AddressFirstName_{{ form.id }}">{{ 'customer.addresses.first_name' | t }}</label>
                    <input
                      type="text"
                      id="AddressFirstName_{{ form.id }}"
                      name="address[first_name]"
                      value="{{ form.first_name }}"
                      autocomplete="given-name"
                      placeholder="{{ 'customer.addresses.placeholder.first_name' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressLastName_{{ form.id }}">{{ 'customer.addresses.last_name' | t }}</label>
                    <input
                      type="text"
                      id="AddressLastName_{{ form.id }}"
                      name="address[last_name]"
                      value="{{ form.last_name }}"
                      autocomplete="family-name"
                      placeholder="{{ 'customer.addresses.placeholder.last_name' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressAddress1_{{ form.id }}">{{ 'customer.addresses.address1' | t }}</label>
                    <input
                      type="text"
                      id="AddressAddress1_{{ form.id }}"
                      name="address[address1]"
                      value="{{ form.address1 }}"
                      autocomplete="address-line1"
                      placeholder="{{ 'customer.addresses.placeholder.address1' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressAddress2_{{ form.id }}">{{ 'customer.addresses.address2' | t }}</label>
                    <input
                      type="text"
                      id="AddressAddress2_{{ form.id }}"
                      name="address[address2]"
                      value="{{ form.address2 }}"
                      autocomplete="address-line2"
                      placeholder="{{ 'customer.addresses.placeholder.address2' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressCity_{{ form.id }}">{{ 'customer.addresses.city' | t }}</label>
                    <input
                      type="text"
                      id="AddressCity_{{ form.id }}"
                      name="address[city]"
                      value="{{ form.city }}"
                      autocomplete="address-level2"
                      placeholder="{{ 'customer.addresses.placeholder.city' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressCountry_{{ form.id }}">
                      {{ 'customer.addresses.country' | t }}
                    </label>
                    <div class="select">
                      <select
                        id="AddressCountry_{{ form.id }}"
                        name="address[country]"
                        data-address-country-select
                        data-default="{{ form.country }}"
                        data-form-id="{{ form.id }}"
                        autocomplete="country">
                        {{ all_country_option_tags }}
                      </select>
                      {% render 'icon-caret' %}
                    </div>
                  </div>
                  <div
                    class="field"
                    id="AddressProvinceContainer_{{ form.id }}"
                    style="display:none;">
                    <label for="AddressProvince_{{ form.id }}">
                      {{ 'customer.addresses.province' | t }}
                    </label>
                    <div class="select">
                      <select
                        id="AddressProvince_{{ form.id }}"
                        name="address[province]"
                        data-default="{{ form.province }}"
                        autocomplete="address-level1"></select>
                      {% render 'icon-caret' %}
                    </div>
                  </div>
                  <div class="field">
                    <label for="AddressZip_{{ form.id }}">{{ 'customer.addresses.zip' | t }}</label>
                    <input
                      type="text"
                      id="AddressZip_{{ form.id }}"
                      name="address[zip]"
                      value="{{ form.zip }}"
                      autocapitalize="characters"
                      autocomplete="postal-code"
                      placeholder="{{ 'customer.addresses.placeholder.zip' | t }}">
                  </div>
                  <div class="field">
                    <label for="AddressPhone_{{ form.id }}">{{ 'customer.addresses.phone' | t }}</label>
                    <input
                      type="tel"
                      id="AddressPhone_{{ form.id }}"
                      name="address[phone]"
                      value="{{ form.phone }}"
                      autocomplete="tel"
                      placeholder="{{ 'customer.addresses.placeholder.phone' | t }}">
                  </div>
                  <div class="form-footer">
                    <div class="form-footer_default-address">
                      {{ form.set_as_default_checkbox }}
                      <label for="address_default_address_{{ form.id }}">
                        {{ 'customer.addresses.set_default' | t }}
                      </label>
                    </div>
                    <div class="form-footer-buttons">
                      <button class="form-footer-update button">
                        <span>
                          {{ 'customer.addresses.update' | t }}
                        </span>
                      </button>
                      <button class="form-footer-reset button" type="reset">
                        <span>
                          {{ 'customer.addresses.cancel' | t }}
                        </span>
                      </button>
                    </div>
                  </div>
  
                {%- endform -%}
              </div>
            </li>
          {%- endfor -%}
        </ul>
  
        {%- if paginate.pages > 1 -%}
          {%- if paginate.parts.size > 0 -%}
            <nav
              class="pagination"
              role="navigation"
              aria-label="{{ 'general.pagination.label' | t }}">
              <ul role="list">
                {%- if paginate.previous -%}
                  <li>
                    <a href="{{ paginate.previous.url }}" aria-label="{{ 'general.pagination.previous' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
  
                {%- for part in paginate.parts -%}
                  <li>
                    {%- if part.is_link -%}
                      <a href="{{ part.url }}" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                        {{- part.title -}}
                      </a>
                    {%- else -%}
                      {%- if part.title == paginate.current_page -%}
                        <span aria-current="page" aria-label="{{ 'general.pagination.page' | t: number: part.title }}">
                          {{- part.title -}}
                        </span>
                      {%- else -%}
                        <span>{{ part.title }}</span>
                      {%- endif -%}
                    {%- endif -%}
                  </li>
                {%- endfor -%}
  
                {%- if paginate.next -%}
                  <li>
                    <a href="{{ paginate.next.url }}" aria-label="{{ 'general.pagination.next' | t }}">
                      <svg
                        aria-hidden="true"
                        focusable="false"
                        viewBox="0 0 10 6">
                        <path
                          fill-rule="evenodd"
                          clip-rule="evenodd"
                          d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z"
                          fill="currentColor">
                      </svg>
                    </a>
                  </li>
                {%- endif -%}
              </ul>
            </nav>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  {%- endpaginate -%}
</div>

<script>
  window.addEventListener('load', () => {
    typeof CustomerAddresses !== 'undefined' && new CustomerAddresses();
  });
</script>

{% schema %}
  {
    "name": "t:sections.main-addresses.name",
    "settings": [
      {
        "type": "color_scheme",
        "id": "section_color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-2"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "Container color scheme",
        "default": "scheme-1"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 80
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 140
      },
	  {
        "type": "checkbox",
        "id": "button_arrow",
        "default": true,
        "label": "Button with arrow"
      },
	  {
		"type": "select",
		"id": "button_style",
		"label": "Button style",
			"options": [
			{
		    	"value": "link",
				"label": "Inline button"
			},
			{
				"value": "link_hover",
				"label": "Inline button with underline on hover"
			},
			{
				"value": "link_icon",
				"label": "Inline button with icon"
			}
			],
				"default": "link_icon"
		}
    ]
  }
{% endschema %}