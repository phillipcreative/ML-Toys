{{ 'featured-promotion.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="featured-promotion section-{{ section.id }}-padding color-{{ section.settings.color_scheme }}">
  <div class="featured-promotion__wrapper page-width">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="section-heading align-{{ section.settings.heading_alignment }}">
        {%- if section.settings.title != blank -%}
          <h2 class="section-title section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="section-description rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}
    <div class="featured-promotion__list grid-column-{{ section.settings.item_per_row }}">
      {% for block in section.blocks %}
        <div class="featured-promotion__item color-{{ block.settings.color_scheme_item }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>
          <div class="featured-promotion__item-img-wrapper" style="width: {{ block.settings.image_width }}px;">
            {% if block.settings.image != blank %}
              <img
                src="{{ block.settings.image | image_url }}"
                loading="lazy"
                alt="featured image"
                width="60"
                height="70">

            {%- else -%}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
          </div>
          <div class="featured-promotion__item-content">
            {%- if block.settings.item_title != blank -%}
              <h6 class="featured-promotion__item-title inline-richtext">
                {{ block.settings.item_title }}
              </h6>
            {%- endif -%}

            {%- if block.settings.item_description != blank -%}
              <div class="featured-promotion__item-description rte">
                {{ block.settings.item_description }}
              </div>
            {%- endif -%}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>


{% schema %}
  {
    "name": "Featured promotion",
    "class": "section",
    "tag": "section",
    "disabled_on": {
      "groups": [
        "header",
        "footer"
      ]
    },
    "settings": [
      {
        "type": "inline_richtext",
        "id": "title",
        "label": "t:sections.multicolumn.settings.title.label"
      },
      {
        "type": "text_alignment",
        "id": "heading_alignment",
        "label": "Heading alignment",
        "default": "center"
      },
      {
        "type": "select",
        "id": "heading_size",
        "options": [
          {
            "value": "h3",
            "label": "t:sections.all.heading_size.options__1.label"
          },
          {
            "value": "h2",
            "label": "t:sections.all.heading_size.options__2.label"
          },
          {
            "value": "h1",
            "label": "t:sections.all.heading_size.options__3.label"
          }
        ],
        "default": "h2",
        "label": "t:sections.all.heading_size.label"
      },
      {
        "type": "richtext",
        "id": "description",
        "label": "t:sections.featured-collection.settings.description.label"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-2"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 70
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 180,
        "step": 2,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 70
      }
    ],
    "blocks": [
      {
        "type": "Feature",
        "name": "Feature",
        "settings": [
          {
            "type": "color_scheme",
            "id": "color_scheme_item",
            "label": "t:sections.all.colors.label",
            "default": "scheme-1"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          },
          {
            "type": "range",
            "id": "image_width",
            "label": "Image width",
            "min": 20,
            "max": 120,
            "step": 1,
            "default": 60,
            "unit": "px"
          },
          {
            "type": "inline_richtext",
            "id": "item_title",
            "default": "Column",
            "label": "Title"
          },
          {
            "type": "richtext",
            "id": "item_description",
            "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post.</p>",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Featured promotion",
        "blocks": [
          {
            "type": "Feature"
          },
          {
            "type": "Feature"
          },
          {
            "type": "Feature"
          },
          {
            "type": "Feature"
          }
        ]
      }
    ]
  }
{% endschema %}