{{ 'team-member.css' | asset_url | stylesheet_tag }}

{%- style -%}
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.57 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.57 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 1199px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.72 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.72 | round: 0 }}px;
    }
  }

  @media screen and (min-width: 1200px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="team-member section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="team-member__wrapper page-width">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="section-heading align-{{ section.settings.heading_alignment }}">

        {%- if section.settings.title != blank -%}
          <h2 class="section-title section-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.title }}
          </h2>
        {%- endif -%}

        {%- if section.settings.description != blank -%}
          <div class="section-description rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

      </div>
    {%- endif -%}

    <div class="team-member__list">

      {% for block in section.blocks %}

        {%- case block.type -%}
                
          {%- when 'Employee_main' -%}
            <div id="Employee-{{ section.id }}-{{ forloop.index }}" class="team-member__item item-banner color-{{ block.settings.color_scheme_item }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>

							{% if block.settings.image != blank %}
								{%- style -%}
									#Employee-{{ section.id }}-{{ forloop.index }} {
										--focal-point: {{ block.settings.image.presentation.focal_point | default: "50% 50%" }};
									}
								{%- endstyle -%}
							{% endif %}

              <div class="team-member__item-img-wrapper">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url }}" loading="lazy" alt="team image" width="605" height="634">
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>

              <div class="team-member__item-info {{ block.settings.card_content_alignment }}">

                {%- if block.settings.fullname != blank -%}
                  <h6 class="team-member__item-fullname inline-richtext">
                    {{ block.settings.fullname }}
                  </h6>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
                  <div class="team-member__item-description rte rte-{{ block.settings.text_size_block }}">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}

                {%- if block.settings.job_title != blank -%}
                  <div class="team-member__item-job-title clr-{{ block.settings.job_title_color }} inline-richtext">
                    {{ block.settings.job_title }}
                  </div>
                {%- endif -%}

                {%- if block.settings.link_label != blank -%}
                  <div class="team-member__item-link__wrapper team-member__item-link__wrapper--static">
                    <a {% if block.settings.link == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.link }}"{% endif %} target="_blank" class="team-member__item-link button">
                      <span>
                        {{ block.settings.link_label }}
                      </span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

        {%- endcase -%}
      {% endfor %}
      
      {% for block in section.blocks %}

        {%- case block.type -%}

          {%- when 'Employee' -%}
            <div id="Employee-{{ section.id }}-{{ forloop.index }}" class="team-member__item color-{{ block.settings.color_scheme_item }} {% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"{% if settings.animations_reveal_on_scroll %} data-cascade style="--animation-order: {{ forloop.index }};" {% endif %} {{ block.shopify_attributes }}>
							{% if block.settings.image != blank %}
								{%- style -%}
									#Employee-{{ section.id }}-{{ forloop.index }} {
										--focal-point: {{ block.settings.image.presentation.focal_point | default: "50% 50%" }};
									}
								{%- endstyle -%}
							{% endif %}

              <div class="team-member__item-img-wrapper">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url }}" loading="lazy" alt="team image" width="605" height="634">
                {%- else -%}
                  {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
                {% endif %}
              </div>

              <div class="team-member__item-info {{ block.settings.card_content_alignment }}">

                {%- if block.settings.fullname != blank -%}
                  <h6 class="team-member__item-fullname inline-richtext">
                    {{ block.settings.fullname }}
                  </h6>
                {%- endif -%}

                {%- if block.settings.description != blank -%}
					<div class="team-member__item-description rte rte-{{ block.settings.text_size_block }}">
                    {{ block.settings.description }}
                  </div>
                {%- endif -%}

                {%- if block.settings.job_title != blank -%}
                  <div class="team-member__item-job-title inline-richtext clr-{{ block.settings.job_title_color }}">
                    {{ block.settings.job_title }}
                  </div>
                {%- endif -%}

                {%- if block.settings.link_label != blank -%}
                  <div class="team-member__item-link__wrapper">
                    <a {% if block.settings.link == blank %} role="link" aria-disabled="true" {% else %} href="{{ block.settings.link }}"{% endif %} target="_blank" class="team-member__item-link button">
                      <span>
                        {{ block.settings.link_label }}
                      </span>
                    </a>
                  </div>
                {%- endif -%}
              </div>
            </div>

        {%- endcase -%}
      {% endfor %}
    </div>
  </div>

</div>

